.container{background:#eee;display: block;}
.section{font-size: 16px; background: #fff;padding: 0 0 0 5px;}
.section__title{color: grey;}
.section_gap{margin-top: 10px;}
.border-b{border-bottom: 1px solid #eee}
.button{margin: 10px}
.pt-10{padding-top: 10px;}
.lh-40{line-height: 40px;}
.flex{display: flex;}
.userinfo-avatar {
  flex: 0 0 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.explain{flex:2;font-size: 13px;background:#eee;padding:10px;border-radius:5px;margin:0 10px;position: relative;}
.explain:after{content: '';position: absolute;top: 12px;left: -20px;width: 0;height: 0;border: 10px solid #eee;border-color: transparent #eee transparent transparent;}
.address{padding:0 0 10px 30px;font-size: 12px;color: grey}
.number{color: #555;font-size: 16px;}
.box{display: inline-block;width: 33%;font-size: 12px;align-items: center;}
.box-flex{display: flex;align-items: center;}
.box_name{flex:1;overflow: hidden;white-space: nowrap;text-overflow:ellipsis;}
.last{text-align: center;font-size: 13px;padding-top: 20px}
.blank{padding:50px 0;text-align:center;}
.statusMark{font-size: 60px;padding: 20px;border: 10px solid red;color: red;display: inline-block;
